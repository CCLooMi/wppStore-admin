<s-v>
    <cc-form v>
        <form-group>
            <label>Title</label>
            <form-input>
                <textarea cc-model="Title" editor="html"></textarea>
            </form-input>
        </form-group>
        <form-group>
            <label>ContentBlock</label>
            <form-input>
                <textarea cc-model="ContentBlock" editor="html"></textarea>
            </form-input>
        </form-group>
        <form-group>
            <label>Wpp</label>
            <form-input type="file" cc-click="selectWpps()">
                <ul class="files" placeholder="Click to select wpps"></ul>
            </form-input>
        </form-group>
        <form-group>
            <label>Body</label>
            <form-input>
                <textarea cc-model="Body" editor="html"></textarea>
            </form-input>
        </form-group>
        <style>
            textarea {
                resize: vertical;
            }

            .monaco-editor {
                min-height: 120px;
            }
            .files{
                grid-template-columns: repeat(auto-fill, minmax(198px, 1fr));
            }
            .files[placeholder]:before {
              position: absolute;
              content: attr(placeholder);
              color: rgba(0,0,0,0.2);
              align-self: center;
              justify-self: center;
              font-size: 22px;
            }
        </style>
    </cc-form>
</s-v>