<s-v class="container">
    <cc-form v>
        <form-group>
            <label>Name</label>
            <form-input>
                <input type="text" placeholder="name" cc-model="name" cc-require=":Name can not be empty!">
            </form-input>
        </form-group>
        <form-group>
            <label>Code</label>
            <form-input>
                <input type="text" placeholder="code" cc-model="code" cc-require=":Code can not be empty!">
            </form-input>
        </form-group>
    </cc-form>
</s-v>