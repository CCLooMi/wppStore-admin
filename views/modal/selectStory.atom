<script type="text/less">
    @row_h:348px;
    @col_w:319px;
    .container{
        padding: 22px;
        display: grid;
        grid-template-columns: repeat(auto-fit,minmax(@col_w,1fr));
        grid-template-rows: repeat(auto-fit,@row_h);
        gap: 22px;
        position: relative;
        overflow: auto;
    }
    label {
        >input[type="radio"] {
            display: none;
            &:checked + .sticker{
                border: 1px solid white;
                box-shadow: 0 0 22px rgba(0, 0, 0, 0.5);
                &:after{
                    content: "❤";
                    color: crimson;
                    font-size: 22px;
                    line-height: 22px;
                    margin: 11px;
                    position: absolute;
                    right: 0;
                    text-shadow: 0 0 11px white;
                }
            }
        }
    }
    .sticker{
        box-shadow: 0 0 11px rgba(0, 0, 0, 0.3);
        border-radius: 11px;
        min-width: @col_w;
        min-height: @row_h;
        transition: all ease .3s;
        &.max{
            position: fixed;
            width: 100%;
            height: 100%;
            z-index: 1;
            top: 0;
            left: 0;
            bottom: 0;
            right: 0;
            overflow: auto;
            border-radius: 0;
            .face{
                >.title,>.footer{
                    border-radius: 0;
                }
            }
            >.body{
                display: unset;
                height: auto;
            }
        }
        >.body{
            background-color: white;
            overflow: visible;
            padding: 11px;
            height: 0;
            display: none;
        }
    }
    .face{
        position: relative;
        min-width: inherit;
        min-height: inherit;
        border-radius: inherit;
        user-select: none;
        p,h1{
            margin: 0;
        }
        >.title{
            top: 0;
            border-top-left-radius: 11px;
            border-top-right-radius: 11px;
        }
        >.footer{
            bottom: 0;
            border-bottom-left-radius: 11px;
            border-bottom-right-radius: 11px;
        }
        >.title,>.footer{
            padding: 11px;
            position: absolute;
            width: 100%;
            height: fit-content;
        }
        >.bg{
            background-position: center;
            background-size: cover;
            background-repeat: no-repeat;
            video{
              width: 100%;
              height: 100%;
              object-fit: cover;
              object-position: center;
              position: absolute;
            }
        }
    }
    .blur-wb{
        color: black;
        backdrop-filter: blur(30px);
        box-shadow: 0 0 220px rgba(255,255,255,0.3) inset;
    }
    .blur-b{
        color: black;
        backdrop-filter: blur(30px);
        box-shadow: 0 0 220px rgba(0,0,0,0.3) inset;
    }
    .blur-w{
        color: white;
        backdrop-filter: blur(30px);
        box-shadow: 0 0 220px rgba(255,255,255,0.3) inset;
    }
    .blur-bw{
        color: white;
        backdrop-filter: blur(30px);
        box-shadow: 0 0 220px rgba(0,0,0,0.3) inset;
    }
    .wpp-list{
        display: flex;
        gap: 11px;
        justify-content: center;
    }
    .wpp-placard{
        display: grid;
        grid-template-columns: auto 1fr auto;
        gap: 11px;
        align-items: center;
    }
    picture{
        display: grid;
        align-items: center;
        justify-content: center;
        img{
            border-radius: 11px;
            height: 60px !important;
            width: 60px !important;
        }
    }
    a{
        align-self: center;
        justify-self: center;
    }
    divider{
        height: 1px;
        margin: 11px 0;
        &.white{
            background-color: rgba(255,255,255,0.3);
        }
    }
</script>