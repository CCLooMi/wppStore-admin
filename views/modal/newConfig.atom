<s-v class="container">
    <cc-form v="">
        <form-group>
            <label>Name</label>
            <form-input>
                <input type="text" placeholder="name" cc-model="name" cc-require=":Name can not be empty!">
            </form-input>
        </form-group>
        <form-group>
            <label>Value</label>
            <form-input>
                <textarea type="text" placeholder="value" cc-model="value" editor="json"></textarea>
            </form-input>
        </form-group>
        <style>
            form {
                height: 100%;
            }
        </style>
    </cc-form>
</s-v>