<s-v cc-controller="userCtrl" class="container">
    <s-v class="search">
        <cc-form flex>
            <form-group>
                <form-input>
                    <input type="search" placeholder="username" cc-model="opts.username">
                </form-input>
            </form-group>
            <form-group>
                <a class="btn btn-d" cc-click="doSearch()" paper-ripple>Search</a>
            </form-group>
            <style>
                form-group {
                    max-width: 220px;
                }
                .btn{
                    max-width: 120px;
                }
            </style>
        </cc-form>
    </s-v>
    <fieldset>
        <legend>
            <a class="btn btn-glass" cc-click="newUser(users)" paper-ripple>NewUser</a>
        </legend>
        <s-v class="search-result">
            <table>
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Nickname</th>
                        <th>Operation</th>
                    </tr>
                </thead>
                <tbody>
                    <tr cc-repeat="u in users">
                        <td>{{u.username}}</td>
                        <td>{{u.nickname}}</td>
                        <td>
                            <a class="btn btn-info" cc-click="detail(u)" paper-ripple>Detail</a>
                            <a class="btn btn-w" cc-click="editUser(u)" paper-ripple>Edit</a>
                            <a class="btn btn-e" cc-click="delUser(u,users)" paper-ripple>Delete</a>
                        </td>
                    </tr>
                </tbody>
            </table>
            <i-pagination from="wpp-store-admin.user" from-type="idb" to="users" options="opts" reload="doSearch">
            </i-pagination>
        </s-v>
    </fieldset>
</s-v>
<script type="text/less">
    .container{
    padding: 22px;
    grid-template-rows: auto 1fr;
}
</script>