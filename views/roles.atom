<s-v cc-controller="roleCtrl" class="container">
    <s-v class="search">
        <cc-form flex>
            <form-group>
                <form-input>
                    <input type="search" placeholder="name" cc-model="opts.name">
                </form-input>
            </form-group>
            <form-group>
                <form-input>
                    <input type="search" placeholder="code" cc-model="opts.code">
                </form-input>
            </form-group>
            <form-group>
                <a class="btn btn-d" cc-click="doSearch()" paper-ripple>Search</a>
            </form-group>
            <style>
                form-group {
                    max-width: 220px;
                }
                .btn{
                    max-width: 120px;
                }
            </style>
        </cc-form>
    </s-v>
    <fieldset>
        <legend>
            <a class="btn btn-glass" cc-click="newRole(roles)" paper-ripple>NewRole</a>
        </legend>
        <s-v class="search-result">
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Code</th>
                        <th>Operation</th>
                    </tr>
                </thead>
                <tbody>
                    <tr cc-repeat="r in roles">
                        <td>{{r.name}}</td>
                        <td>{{r.code}}</td>
                        <td>
                            <a class="btn btn-i" cc-click="detail(r)" paper-ripple>Detail</a>
                            <a class="btn btn-w" cc-click="editRole(r)" paper-ripple>Edit</a>
                            <a class="btn btn-e" cc-click="delRole(r,roles)" paper-ripple>Delete</a>
                            <a class="btn btn-g" cc-click="roleUsers(r)" paper-ripple>Users</a>
                            <a class="btn btn-g" cc-click="roleMenus(r)" paper-ripple>Menus</a>
                        </td>
                    </tr>
                </tbody>
            </table>
            <i-pagination from="wpp-store-admin.role" from-type="idb" to="roles" options="opts" reload="doSearch">
            </i-pagination>
        </s-v>
    </fieldset>
</s-v>
<script type="text/less">
    .container{
    padding: 22px;
    grid-template-rows: auto 1fr;
}
</script>